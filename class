#include <iostream>
using namespace std;

class binary
{
	string s;
public:
	void read();
	void chkbin();
	void onescompliment();
	void display();
};

void binary::read()
{
	cout << "Enter a binary number: ";
	cin >> s;
}

void binary::chkbin()
{
	for (int i = 0; i < s.length(); i++)
	{
		if (s.at(i) != '0' && s.at(i) != '1')
		{
			cout << "Incorrect binary number" << endl;
		}
	}
}

void binary::onescompliment()
{
	for (int i = 0; i < s.length(); i++) {
		if (s.at(i) == '0')
		{
			s.at(i) = '1';
		}
		else
		{
			s.at(i) = '0';
		}
	}
}

void binary::display() 
{
	cout << "Displaying your binary number" << endl;
	for (int i = 0; i < s.length(); i++)
	{
		cout << s.at(i);
	}
	cout << endl;

}

int main()
{
	binary b;
	b.read();
	b.chkbin();
	b.onescompliment();
	b.display();

	return 0;
}
